    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Saved Articles</h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#each articles}}
            {{#if saved}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>{{this.title}}</h4>
                        <a href="{{this.link}}" target="_blank"></a>
                    </div>
                    <div class="panel-body">
                        <p> {{this.summary}}</p>
                        <br><br>
                        <button class="addNote storyButton" data-id="{{_id}}">Add Note</button>
                        <button class="deleteArticle storyButton" data-id="{{_id}}">Delete Article</button>
                    </div>
                </div>
                {{/if}}
        {{/each}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
    </div>
</div>

  {{!-- modal for displaying and creating notes --}}
  <div id="noteModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title text-center">Add a note</h4>
        </div>
        <div class="modal-body">
          <input type="text" id="noteText" class="noteInput" placeholder="Enter Title">
          <div id="noteArea"></div>
        </div>
        <div class="modal-footer">
          <h5 class="instructions">Click the note to read it, or X to delete</h5>
          <button type="button" id="submitNote">Save Note</button>
        </div>
      </div>
    </div>
  </div>

  {{!-- error modal --}}
  <div id="error" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <h2>There was an error processing your request.  Please try again later.</h2>
        </div>
      </div>
    </div>
  </div>